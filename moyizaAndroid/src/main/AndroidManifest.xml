<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hkh.myz"
    android:versionCode="21"
    android:versionName="v1.02" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- 응용 프로그램에서 네트워크 요청을 수행할 수 있도록 허용하고 원격 디버깅도 허용합니다. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 응용 프로그램에서 장치의 외부 메모리 카드를 READ 할 수 있도록 허용합니다. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 응용 프로그램에서 장치의 외부 메모리 카드에 쓸 수 있도록 허용합니다. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 응용 프로그램에서 NetworkInfo 클래스를 통해 네트워크 정보에 액세스할 수 있도록 허용합니다. -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application
        android:name="com.hkh.myz.MoyizaApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Black" >
        
		<meta-data
	        android:name="com.google.android.gms.version"
	        android:value="@integer/google_play_services_version" />
                
		<activity
       	    android:name="com.hkh.myz.IntroActivity"
       	    android:label="@string/app_name"
       	    android:screenOrientation="portrait">
       	</activity>
       	
		<activity
            android:name="com.hkh.myz.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  
        </activity>
        
        <activity
            android:name="com.hkh.myz.ScaleImageActivity"
            android:launchMode="singleTop" />
        
        <activity android:name="com.purplebrain.adbuddiz.sdk.AdBuddizActivity" 
            android:theme="@android:style/Theme.Translucent" />
        
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>
